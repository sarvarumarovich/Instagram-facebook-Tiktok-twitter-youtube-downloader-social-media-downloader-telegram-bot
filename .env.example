# Telegram API credentials (get from https://my.telegram.org/apps)
API_ID=your_api_id
API_HASH=your_api_hash

# Bot token from @BotFather
BOT_TOKEN=your_bot_token

# Private channel ID where videos will be stored (must be negative, e.g., -1001234567890)
STORAGE_CHANNEL_ID=-1001234567890

# Admin user IDs for admin panel access (comma-separated for multiple admins)
ADMIN_IDS=123456789,987654321

# Session name for Telethon userbot
SESSION_NAME=userbot_session

# Database path
DATABASE_PATH=./db/videos.db

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: Bot usernames for different platforms
YOUTUBE_BOT_USERNAME=SaveYoutubeBot
TIKTOK_BOT_USERNAME=KeepMediaBot
FACEBOOK_BOT_USERNAME=FacebookAsBot
TWITTER_BOT_USERNAME=twittervid_bot
